{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ booking.title }}</td>
            </tr>
            <tr>
                <th>Date début</th>
                <td>{{ booking.beginAt ? booking.beginAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date fin</th>
                <td>{{ booking.endAt ? booking.endAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark stretched-link" href="{{ path('booking_edit', {'id': booking.id}) }}">Modifier</a>
    <a class="btn btn-secondary" href="{{ path('booking_index') }}">Liste des événements</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
